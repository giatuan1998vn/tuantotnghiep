<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".CallingActivity">

    <ImageView
        android:id="@+id/proflie_image_calling"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="centerCrop"
        android:src="@drawable/profile_image">

    </ImageView>

    <TextView
        android:id="@+id/name_calling"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/txt"
        android:gravity="center"
        android:maxLines="5"
        android:text="username"
        android:textColor="@color/colorPrimary"
        android:textSize="@dimen/size30dp"
        android:textStyle="bold" />

    <TextView
        android:id="@+id/txt"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_above="@id/linear_layout"
        android:gravity="center"
        android:maxLines="5"
        android:text="Calling..."
        android:textColor="@color/den"
        android:textSize="20dp"
        android:layout_marginBottom="@dimen/size20dp"
        android:textStyle="bold" />

    <LinearLayout
        android:id="@+id/linear_layout"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_alignParentBottom="true"
        android:layout_marginBottom="40dp"
        android:gravity="center"
        android:orientation="horizontal">

        <ImageView
            android:id="@+id/make_call"
            android:layout_width="@dimen/sie120dp"
            android:layout_height="@dimen/sie120dp"
            android:src="@drawable/make_call"
            android:layout_marginRight="80dp"
            android:visibility="gone"></ImageView>

        <ImageView
            android:id="@+id/cancel_call"
            android:layout_width="@dimen/size110dp"
            android:layout_height="@dimen/size110dp"
            android:src="@drawable/cancel_call"></ImageView>

    </LinearLayout>

</RelativeLayout>