<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">

    <de.hdodenhof.circleimageview.CircleImageView
        android:id="@+id/message_profile_image"
        android:layout_width="@dimen/size45dp"
        android:layout_height="@dimen/size45dp"
        android:layout_marginTop="@dimen/size10dp"
        android:src="@drawable/profile_image"/>

    <TextView
        android:id="@+id/receiver_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_toEndOf="@id/message_profile_image"
        android:background="@drawable/receiver_messages_layout"
        android:text="@string/nhantn"
        android:padding="@dimen/size10dp"
        android:textSize="@dimen/size14sp"
        android:textStyle="bold"
        android:layout_toRightOf="@id/message_profile_image"
        android:textColor="@android:color/black"/>

    <ImageView
        android:id="@+id/message_sender_image_view"
        android:layout_width="@dimen/size150dp"
        android:layout_height="@dimen/size150dp"
        android:layout_alignParentEnd="true"
        android:layout_margin="@dimen/size5dp"
        android:scaleType="centerCrop"
        android:layout_alignParentRight="true" />
    <ImageView
        android:id="@+id/message_receiver_image_view"
        android:layout_width="@dimen/size150dp"
        android:layout_height="@dimen/size150dp"
        android:layout_alignParentStart="true"
        android:layout_marginStart="@dimen/size50dp"
        android:layout_marginTop="@dimen/size13dp"
        android:scaleType="centerCrop"
        android:layout_alignParentLeft="true"
        android:layout_marginLeft="@dimen/size50dp" />


    <TextView
        android:id="@+id/sender_message_text"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentEnd="true"
        android:layout_marginTop="@dimen/size10dp"
        android:layout_alignParentTop="@+id/receiver_message_text"
        android:background="@drawable/sender_messages_layout"
        android:text="@string/guitn"
        android:padding="@dimen/size10dp"
        android:textSize="@dimen/size14sp"
        android:textStyle="bold"
        android:textColor="@android:color/black"
        android:layout_alignParentRight="true" />


</RelativeLayout>